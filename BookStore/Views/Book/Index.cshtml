@model IEnumerable<BookStore.Models.Book>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create" class="btn btn-success">Create New</a>
</p>
<table class="table table-bordered table-striped table-hover">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Descryption)
            </th>
             <th>
                @Html.DisplayNameFor(model => model.Auther.FullName)
            </th>
             <th>
               Image
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Descryption)
            </td>
             <td>
                @Html.DisplayFor(modelItem => item.Auther.FullName)
            </td>
             <td>
                   @if (item.ImageURL != null)
                   {
                    <img src="~/Uplodes/@item.ImageURL" style="width:64px"class="img-thumbnail" />

                   }
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id=item.id}) |
                @Html.ActionLink("Details", "Details", new { id=item.id}) |
                @Html.ActionLink("Delete", "Delete", new { id=item.id })
            </td>
        </tr>
}
    </tbody>
</table>
